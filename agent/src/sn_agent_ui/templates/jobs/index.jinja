{% extends 'base.jinja' %}

{% block content %}

    <form class="form-horizontal" method="post" action="{{ 'jobs'|url }}">

        {% if form_errors %}
            <div class="alert alert-danger">
                {{ form_errors }}
            </div>
        {% endif %}

        <fieldset>

            <div class="form-group">
                <label class="col-md-4 control-label" for="ontology_id">Select Ontology Node</label>
                <div class="col-md-4">
                    <select id="selectbasic" name="ontology_id" class="form-control">
                        <option value="dfcbee73-df66-4de3-85ed-c66a63a577c2">Image Recognizer</option>
                        <option value="88f9eba0-5c29-46f9-a20e-cdaa2496ed2e">Language Recognizer</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label" for="json_content">JSON Job Input</label>
                <div class="col-md-4">
                    <textarea class="form-control" id="json_content" name="json_content"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>

        </fieldset>
    </form>

{% endblock %}
